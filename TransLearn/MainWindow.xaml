<Window x:Class="TransLearn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TransLearn - AI 실시간 학습 번역기" Height="600" Width="900"
        Background="#1E1E1E" Foreground="White">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#555"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <TabControl Background="#252526" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="Background" Value="#2D2D30"/>
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </TabControl.Resources>

            <TabItem Header="📷 화면 번역 (OCR)">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <Button x:Name="BtnOcrStart" Content="▶ 화면 번역 시작 (선택 영역)" Click="BtnOcrStart_Click" Background="#007ACC"/>
                        <TextBlock Text="※ 초록색 창을 단어/문장 위에 올려두세요." VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#AAA"/>
                    </StackPanel>

                    <GroupBox Header="📝 원본 텍스트 (Source)" Grid.Row="1">
                        <TextBox x:Name="TxtOcrSource" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
                    </GroupBox>

                    <GroupBox Header="✨ 번역 결과 (Translated)" Grid.Row="2">
                        <TextBox x:Name="TxtOcrTranslated" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True" FontSize="16" FontWeight="Bold"/>
                    </GroupBox>
                </Grid>
            </TabItem>

            <TabItem Header="🎙️ 오디오 번역 (Sound)">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <Button x:Name="BtnAudioStart" Content="▶ 듣기 시작" Click="BtnAudioStart_Click" Background="#28A745"/>
                        <Button x:Name="BtnAudioStop" Content="⏹ 중지" Click="BtnAudioStop_Click" Background="#DC3545" IsEnabled="False"/>
                        <TextBlock x:Name="TxtAudioStatus" Text="대기 중..." VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>

                    <GroupBox Header="💬 실시간 자막 로그" Grid.Row="1">
                        <TextBox x:Name="TxtAudioLog" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True" AcceptsReturn="True"/>
                    </GroupBox>
                </Grid>
            </TabItem>

            <TabItem Header="📚 학습 모드 (단어장)">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Row="0" x:Name="BtnRefreshLearning" Content="🔄 학습 데이터 새로고침" Click="BtnRefreshLearning_Click" HorizontalAlignment="Left"/>

                    <DataGrid Grid.Row="1" x:Name="GridLearning" AutoGenerateColumns="False" 
          Background="#2D2D30" RowBackground="#2D2D30" AlternatingRowBackground="#3E3E42" 
          Foreground="White" BorderThickness="0" Margin="0,10,0,0"
          GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#555" HeadersVisibility="Column">

                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#1E1E1E"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="10,5"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="단어 (Word)" Binding="{Binding WordOrPhrase}" Width="150" FontWeight="Bold"/>

                            <DataGridTextColumn Header="빈도" Binding="{Binding Frequency}" Width="50"/>

                            <DataGridTemplateColumn Header="💡 뜻 (Definition)" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ContextSentence}" TextWrapping="Wrap" Padding="5" LineHeight="20"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="삭제" Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="🗑" Click="BtnDeleteRow_Click" 
                            Background="#DC3545" Foreground="White" BorderThickness="0"
                            Padding="5,2" Margin="2" Cursor="Hand"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="⚙️ 환경 설정">
                <StackPanel Margin="20">
                    <GroupBox Header="API 키 설정 (API 사용 시)">
                        <StackPanel Margin="10">
                            <TextBlock Text="DeepL API Key:" Margin="0,5"/>
                            <PasswordBox x:Name="BoxDeepLKey" Height="30"/>
                            <TextBlock Text="Azure Speech Key:" Margin="0,10,0,5"/>
                            <PasswordBox x:Name="BoxAzureKey" Height="30"/>
                            <Button Content="설정 저장 (Save)" HorizontalAlignment="Right" Margin="0,10,0,0" Width="100"/>
                        </StackPanel>
                    </GroupBox>
                    <TextBlock Text="※ 현재 버전은 오프라인 사전(WordNet)을 사용하여 API 키 없이도 단어 뜻을 학습합니다." 
                               Margin="10" Foreground="#888"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>