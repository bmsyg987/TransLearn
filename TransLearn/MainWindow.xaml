<Window x:Class="TransLearn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TransLearn - AI 실시간 학습 번역기" Height="600" Width="900"
        Background="#1E1E1E" Foreground="White">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#555"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <TabControl Background="#252526" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="Background" Value="#2D2D30"/>
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </TabControl.Resources>

            <TabItem Header="📷 화면 번역 (OCR)">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <Button x:Name="BtnOcrStart" Content="▶ 화면 번역 시작" Click="BtnOcrStart_Click" Background="#007ACC"/>
                        <TextBlock Text="※ 현재 테스트를 위해 모니터 좌측 상단(500x300) 영역을 자동으로 캡처합니다." 
                                   VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#AAA"/>
                    </StackPanel>

                    <GroupBox Header="📝 원본 텍스트 (Source)" Grid.Row="1">
                        <TextBox x:Name="TxtOcrSource" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
                    </GroupBox>

                    <GroupBox Header="✨ 번역 결과 (Translated)" Grid.Row="2">
                        <TextBox x:Name="TxtOcrTranslated" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True" FontSize="16" FontWeight="Bold"/>
                    </GroupBox>
                </Grid>
            </TabItem>

            <TabItem Header="🎙️ 오디오 번역 (Sound)">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <Button x:Name="BtnAudioStart" Content="▶ 듣기 시작" Click="BtnAudioStart_Click" Background="#28A745"/>
                        <Button x:Name="BtnAudioStop" Content="⏹ 중지" Click="BtnAudioStop_Click" Background="#DC3545" IsEnabled="False"/>
                        <TextBlock x:Name="TxtAudioStatus" Text="대기 중..." VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>

                    <GroupBox Header="💬 실시간 자막 로그" Grid.Row="1">
                        <TextBox x:Name="TxtAudioLog" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True" AcceptsReturn="True"/>
                    </GroupBox>
                </Grid>
            </TabItem>

            <TabItem Header="📚 학습 모드 (단어장)">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Row="0" x:Name="BtnRefreshLearning" Content="🔄 학습 데이터 새로고침" Click="BtnRefreshLearning_Click" HorizontalAlignment="Left"/>

                    <DataGrid Grid.Row="1" x:Name="GridLearning" AutoGenerateColumns="True" Background="#2D2D30" 
                              RowBackground="#2D2D30" AlternatingRowBackground="#3E3E42" Foreground="White" 
                              BorderThickness="0" Margin="0,10,0,0">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#1E1E1E"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGrid.Resources>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="⚙️ 환경 설정">
                <StackPanel Margin="20">
                    <GroupBox Header="API 키 설정">
                        <StackPanel Margin="10">
                            <TextBlock Text="DeepL API Key:" Margin="0,5"/>
                            <PasswordBox x:Name="BoxDeepLKey" Height="30"/>

                            <TextBlock Text="Azure Speech Key:" Margin="0,10,0,5"/>
                            <PasswordBox x:Name="BoxAzureKey" Height="30"/>

                            <Button Content="설정 저장 (Save)" HorizontalAlignment="Right" Margin="0,10,0,0" Width="100"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="번역 모델 선택 [cite: 543]">
                        <StackPanel Margin="10" Orientation="Horizontal">
                            <RadioButton Content="DeepL API (Default)" IsChecked="True" Margin="0,0,20,0" Foreground="White"/>
                            <RadioButton Content="Google Gemini" Foreground="White"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>